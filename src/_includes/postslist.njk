<ol reversed class="postlist">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    
    <a href="{{ post.url | url }}" class="postlist-link">
      <h3>
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </h3>

      {% if post.data.subtitle %}
        <h4>
          {{ post.data.subtitle }}
        </h4>
      {% endif %}
    </a>

  </li>
{% endfor %}
</ol>
